<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportPage">

    <TextView
        android:id="@+id/reportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:letterSpacing=".10"
        android:text="@string/reports"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#999999"
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_below="@id/reportTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="565dp"
        android:background="#F2F2F2"/>

    <TextView
        android:id="@+id/latestReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="223dp"
        android:text="@string/latestReport" />

    <ImageButton
        android:id="@+id/report1Img"
        android:layout_width="366dp"
        android:layout_height="229dp"
        android:layout_below="@id/latestReportTitle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/report1" />

    <ImageButton
        android:id="@+id/report2Img"
        android:layout_width="336dp"
        android:layout_height="229dp"
        android:layout_below="@id/report1Img"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="50dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/report2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/extendFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="45dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_plus" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="107dp"
        android:backgroundTint="@color/blue_theme"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_home" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/featuresFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@color/blue_theme"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_toc" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/resultFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="231dp"
        android:backgroundTint="@color/blue_theme"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_assignment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profileFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="292dp"
        android:backgroundTint="@color/blue_theme"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_profile" />

</RelativeLayout>