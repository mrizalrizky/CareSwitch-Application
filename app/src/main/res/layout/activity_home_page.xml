<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/sayHi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Hi!"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/hospitalBtn"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="105dp"
        android:layout_toRightOf="@id/showAllBtn"
        android:backgroundTint="#FFFFFF"
        android:padding="0dp"
        android:text="@string/hospital"
        android:textAllCaps="true"
        android:textColor="#5B7D76"
        android:textSize="11sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/paymentBtn"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="301dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="35dp"
        android:layout_toRightOf="@id/ARDiagnoseBtn"
        android:backgroundTint="#FFFFFF"
        android:padding="0dp"
        android:text="@string/payment"
        android:textAllCaps="true"
        android:textColor="#5B7D76"
        android:textSize="11sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/showAllBtn"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="105dp"
        android:backgroundTint="#FFFFFF"
        android:padding="0dp"
        android:text="All"
        android:textAllCaps="true"
        android:textColor="#5B7D76"
        android:textSize="11sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ARDiagnoseBtn"
        android:layout_width="126dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="105dp"
        android:layout_toRightOf="@id/hospitalBtn"
        android:backgroundTint="#FFFFFF"
        android:padding="0dp"
        android:text="AR Diagnose: DWT"
        android:textAllCaps="true"
        android:textColor="#5B7D76"
        android:textSize="11sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/topActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showAllBtn"
        android:layout_alignStart="@id/showAllBtn"
        android:layout_marginTop="30dp"
        android:text="Top activities"
        android:textSize="17dp" />

    <ImageButton
        android:id="@+id/topActivity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topActivityTitle"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/takecovidtest" />

    <TextView
        android:id="@+id/educationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topActivity1"
        android:layout_alignStart="@id/topActivityTitle"
        android:layout_marginTop="0dp"
        android:text="Education"
        android:textSize="17dp" />

    <ImageButton
        android:id="@+id/firstArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/educationTitle"
        android:layout_marginStart="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingStart="10dp"
        android:src="@drawable/article1" />

    <ImageButton
        android:id="@+id/secondArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/educationTitle"
        android:layout_toRightOf="@id/firstArticle"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/article2"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/extendFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="45dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_plus" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="107dp"
        android:backgroundTint="@color/blue_theme"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_home" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/featuresFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@color/blue_theme"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_toc" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/resultFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="231dp"
        android:backgroundTint="@color/blue_theme"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_assignment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profileFloatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="292dp"
        android:backgroundTint="@color/blue_theme"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_profile" />



</RelativeLayout>